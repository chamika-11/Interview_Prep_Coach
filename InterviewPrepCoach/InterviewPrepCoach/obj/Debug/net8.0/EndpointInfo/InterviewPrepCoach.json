{
  "openapi": "3.0.4",
  "info": {
    "title": "InterviewPrepCoach",
    "version": "1.0"
  },
  "paths": {
    "/api/Interview/analyze-resume": {
      "post": {
        "tags": [
          "Interview"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ResumeInput"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/ResumeInput"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/ResumeInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Interview/parse-jd": {
      "post": {
        "tags": [
          "Interview"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/JdInput"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/JdInput"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/JdInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Interview/generate-questions": {
      "post": {
        "tags": [
          "Interview"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/QuestionInput"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/QuestionInput"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/QuestionInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "JdInput": {
        "type": "object",
        "properties": {
          "jobDescriptionText": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "JdOutput": {
        "type": "object",
        "properties": {
          "skills": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "responsibilities": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "niceToHaves": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "QuestionInput": {
        "type": "object",
        "properties": {
          "resume": {
            "$ref": "#/components/schemas/ResumeOutput"
          },
          "jobDescription": {
            "$ref": "#/components/schemas/JdOutput"
          },
          "count": {
            "type": "integer",
            "format": "int32"
          }
        },
        "additionalProperties": false
      },
      "ResumeInput": {
        "type": "object",
        "properties": {
          "resumePath": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      },
      "ResumeOutput": {
        "type": "object",
        "properties": {
          "skills": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          },
          "experienceSummary": {
            "type": "string",
            "nullable": true
          },
          "gaps": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}